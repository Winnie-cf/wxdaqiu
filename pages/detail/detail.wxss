/* pages/detail/detail.wxss */
.slide-image{
  height: 100%;
  width: 100%;
}
.icon-box{
  padding:40rpx 8% 10rpx 8%;
  width:100%;
  height: 200rpx;
  border-bottom:10rpx solid #eee;
}
.icons{
  position: absolute;
  top:0;
  width: 100rpx;
  height: 100rpx;
}
.grid{
  position: relative;
  float: left;
  width: 180rpx;
  height: 180rpx;
}
.text{
  position: absolute;
  top:110rpx;
  /* padding-left:30rpx; */
  font-size:12px;
}
.title-box{
  position: relative;
  width: 100%;
  height: 70rpx;
  /* margin-left:20rpx; */
  border-bottom:1px solid #eee;
}
.title{
  position: absolute;
  top:15rpx;
  left:0rpx;
  height: 40rpx;
  padding-left: 10rpx;
  border-left:7rpx solid #2D94FC;
  font-size:12px;
  color:#000;
}
.list{
  position: relative;
  width:100%;
  height: 180rpx;
  margin-top:15rpx;
  /* background-color: #eee; */
  border-bottom:2rpx solid #eee;
}
.list-left{
  height: 180rpx;
  position: absolute;
  left: 0;
  width: 30%;
  /* background-color: #ddd; */
}
.list-right{
  position: absolute;
  height: 180rpx;
  left: 30%;
  width: 70%;
  /* background-color: #fff; */
}
.list-img{
  width:180rpx;
  height: 140rpx;
  margin:10rpx 18rpx;
  /* background-color: #ddd; */
}
.list-text{
  height: 30%;
  font-size: 12px;
  padding: 10rpx;
  color:#333;

}
.list-text:first-child{
  height: 50%;
  font-size: 14px;
  color:#000;
}
.text-style{
   display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}